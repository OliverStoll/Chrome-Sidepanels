{
  "manifest_version": 3,
  "name": "File Explorer",
  "version": "1.0",
  "commands": {
        "_execute_action": {
            "suggested_key": {
                "windows": "Alt+P",
                "mac": "Alt+P",
                "chromeos": "Alt+P",
                "linux": "Alt+P"
            }
        }
    },
  "icons": {
      "128": "images/icon128.png"
    },
  "permissions": [
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["file://*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "Open Panel"
  },
  "side_panel": {
    "default_path": "side_panel.html",
    "default_title": "Simple Sidebar"
  }
}

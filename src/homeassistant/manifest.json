{
  "manifest_version": 3,
  "name": "Home Assistant",
  "version": "1.0",
  "commands": {
        "_execute_action": {
            "suggested_key": {
                "windows": "Alt+U",
                "mac": "Alt+U",
                "chromeos": "Alt+U",
                "linux": "Alt+U"
            }
        }
    },
  "icons": {
      "128": "images/icon128.png"
    },
  "permissions": [
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Open Panel"
  },
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "content_scripts": [
    {
      "matches": ["http://homeassistant.local:8123/dashboard-chrome*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}


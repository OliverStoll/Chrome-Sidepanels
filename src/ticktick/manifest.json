{
  "manifest_version": 3,
  "name": "TickTick",
  "version": "1.0",
  "commands": {
        "_execute_action": {
            "suggested_key": {
                "windows": "Alt+I",
                "mac": "Alt+I",
                "chromeos": "Alt+I",
                "linux": "Alt+I"
            },
            "global": true
        }
    },
  "icons": {
      "128": "images/icon128.png"
    },
  "permissions": [
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Open Panel"
  },
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://ticktick.com/webapp/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://ticktick.com/webapp/*"],
      "include_globs": [ "https://ticktick.com/webapp/#q/today/tasks?side_panel=1"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
